{
  "version": "1.0",
  "requirements": {
    "runtime": {
      "node": ">=18.0.0",
      "python": ">=3.9",
      "java": ">=17"
    },
    "tools": {
      "git": ">=2.30",
      "docker": ">=20.10"
    },
    "env_vars": {
      "ANTHROPIC_API_KEY": "required",
      "OPENAI_API_KEY": "optional"
    },
    "agent_config": {
      "model": "claude-sonnet-4",
      "temperature": 0.7
    },
    "context": {
      "files": ["README.md", "ARCHITECTURE.md"],
      "directories": ["docs/"]
    },
    "git": {
      "hooks": ["pre-commit", "commit-msg"],
      "config": {
        "user.name": "required",
        "user.email": "required"
      }
    },
    "docs": {
      "required": ["README.md", "CONTRIBUTING.md"],
      "recommended": ["ARCHITECTURE.md"]
    }
  },
  "projects": {
    "my-project": {
      "requirements": {
        "runtime": {
          "node": ">=20.0.0"
        }
      }
    }
  }
}
